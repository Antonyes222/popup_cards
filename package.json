{
    "name": "popup_cards",
    "version": "0.1.0",
    "private": true,
    "description": "Client + server workspace for popup_cards",
    "main": "server/index.js",
    "scripts": {
        "run": "concurrently \"node server/index.js\" \"npm --prefix client start\"",
        "dev": "concurrently \"nodemon --watch server --exec 'node server/index.js'\" \"nodemon --watch client --exec 'npm --prefix client start'\"",
        "start": "npm run run",
        "build": "npm --prefix client run build || echo \"client build script not found\"",
        "lint": "eslint . || true",
        "test": "echo \"No tests specified\" && exit 0"
    },
    "engines": {
        "node": ">=14"
    },
    "devDependencies": {
        "concurrently": "^8.2.0",
        "nodemon": "^2.0.22",
        "eslint": "^8.46.0"
    },
    "license": "MIT"
}